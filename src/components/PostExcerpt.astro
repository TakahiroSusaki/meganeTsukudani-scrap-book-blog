---
import { Post } from '../lib/interfaces.ts'

export interface Props {
  post: Post
}

const { post } = Astro.props
---

<div class="post-excerpt">
  <p>{post.Excerpt ? post.Excerpt : ''}</p>
</div>

<style>
  .post-excerpt {
    padding: 0.2rem 0;
    font-size: 1rem;
    max-width: 90%;
    min-width: 300px;
  }

  .post-excerpt p {
    margin: 0;
    font-size: 14px;
    line-height: 1.3;
  }
</style>
